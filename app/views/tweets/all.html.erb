<p id="notice"><%= notice %></p>

<h1>Listing Tweets</h1>

<% if user_signed_in? %>    <!-- when signed in  -->
  <%= link_to('All Tweets', tweets_path)  %> or  <!-- Is this right? -->
  <!-- Insert My Tweets code cuurent_users.tweets? -->
  <%= link_to('Edit Preferences', edit_user_registration_path) %>  <!-- I wanted to keep this here -->
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<% else %>    <!-- when signed out -->
  <%= link_to('All Tweets', tweets_path)  %> or  <!-- Is this right? -->
  <%= link_to('Register', new_user_registration_path)  %> or
  <%= link_to('Login', new_user_session_path)  %>  
<% end %>

<p></p>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

